{
    "name": "@ragaeeb/locale-index-of",
    "version": "5.0.0",
    "description": "A locale-aware Intl-powered version of indexOf.",
    "main": "dist/main.js",
    "files": [
        "dist/main.js",
        "dist/main.js.map",
        "dist/*.d.ts"
    ],
    "source": "src/index.js",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "type": "module",
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "watch": "parcel watch",
        "build": "parcel build && cp src/index.d.ts dist",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "keywords": [
        "Intl",
        "Collator",
        "locale",
        "string",
        "search",
        "indexOf",
        "accents",
        "diacritics",
        "case-insensitive",
        "punctuation",
        "arabic",
        "tashkeel"
    ],
    "author": {
        "name": "Ragaeeb Haq",
        "url": "https://github.com/ragaeeb"
    },
    "contributors": [
        {
            "name": "Tom Adler",
            "email": "me@arty.name",
            "url": "https://arty.name"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ragaeeb/locale-index-of.git"
    },
    "license": "ISC",
    "devDependencies": {
        "@jest/globals": "30.0.0-alpha.2",
        "@semantic-release/changelog": "^6.0.3",
        "eslint": "^8.55.0",
        "eslint-config-airbnb-base": "15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-prettier": "^5.0.1",
        "eslint-plugin-simple-import-sort": "10.0.0",
        "jest": "30.0.0-alpha.2",
        "parcel": "^2.10.3",
        "prettier": "^3.1.0",
        "semantic-release": "^22.0.7"
    },
    "private": false
}
